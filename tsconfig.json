{
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "jsx": "preserve",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom",
      "webworker"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "target": "es2017",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  }
}